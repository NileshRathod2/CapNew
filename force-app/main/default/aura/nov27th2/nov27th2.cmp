<aura:component implements="flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction" access="global"  >
    
    <div class="demo-only demo-only--sizing slds-grid slds-wrap">
        <div class=" slds-size_1-of-2 slds-p-left_medium slds-p-right_medium">
            <lightning:input aura:id="fname" name="input1" label="Enter your Firstname" placeholder="Firstname.."/>
        </div>
        <div class="slds-size_1-of-2 slds-p-left_medium slds-p-right_medium" >
            <lightning:input aura:id="lname" name="input2" label="Enter your Lastname" placeholder="Lastname.."/>
        </div>
        <div class="slds-size_1-of-2 slds-p-left_medium slds-p-right_medium" >
            <lightning:input aura:id="phone" label="phone" name="phone" placeholder="Enter a phone number"/>
        </div>
        
        <div class="slds-size_1-of-2 slds-p-left_medium slds-p-right_medium" >
            <lightning:input aura:id="email"  type="email" name="email" placeholder="youraddress@company.com" label="Enter a Email" />
        </div>
        
        <br/>
        
       <div class="slds-align_absolute-center" style="height:5rem">
            <lightning:button variant="brand" label="Submit" title="Brand action" onclick="{! c.handleClick }" />

            
        </div>
    </div>
</aura:component>